---
import type { BaseSanityDocument } from 'src/types'
import Layout from './Layout.astro'
import { FormattedDate } from 'src/components/react'

type Props = Pick<BaseSanityDocument, 'title' | 'description' | 'pubDate' | 'upDate' | 'featuredImage'>

const { title, description, pubDate, upDate, featuredImage } = Astro.props
---

<Layout title={title} description={description}>
  <article class="prose md:prose-lg lg:prose-xl max-w-none">
    {featuredImage && <img width={720} height={360} src={featuredImage.asset.url} alt={description} />}
    <h1>{title}</h1>
    <FormattedDate date={pubDate} />
    {
      upDate && (
        <div class="italic">
          Last updated on <FormattedDate date={upDate} />
        </div>
      )
    }
    <pre>{JSON.stringify({ title, description, pubDate, upDate, featuredImage})}</pre>
    <hr class="border-top border-t-gray-400" />
    <slot />
  </article>
</Layout>
