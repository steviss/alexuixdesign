---
import Layout from './Layout.astro'
import { FormattedDate } from 'src/components/react'
import type { ProjectType } from '../clients/sanity'

type Props = Pick<ProjectType, 'title' | 'description' | 'pubDate' | 'upDate' | 'featuredImage' | 'roles'>

const { title, description, upDate, featuredImage, roles } = Astro.props
---

<Layout title={title} description={description}>
  <section class="container mx-auto">
    <div class="px-5 md:px-10 lg:px-12 flex flex-col my-12">
      <div class="flex flex-col gap-12 md:mb-20 mb-12 lg:mb-28">
        <h1 class="text-white md:text-4xl text-3xl lg:text-5xl font-medium">{title}</h1>
        <p class="text-white md:text-3xl text-2xl lg:text-4xl font-semibold">{description}</p>
      </div>

      <div class="w-full flex items-start justify-between mb-20">
        <div class="border-b py-1 border-white flex items-center gap-2">
          <a class="text-white uppercase md:text-xl text-lg lg:text-2xl" target="_blank" href="/">Visit website</a>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 20 19" fill="none">
            <path
              d="M19.8827 3.1227C19.9504 2.29705 19.336 1.57279 18.5104 1.50503L5.05564 0.400729C4.22999 0.332964 3.50573 0.947352 3.43796 1.773C3.3702 2.59865 3.98459 3.32291 4.81024 3.39068L16.77 4.37227L15.7884 16.3321C15.7207 17.1577 16.335 17.882 17.1607 17.9497C17.9864 18.0175 18.7106 17.4031 18.7784 16.5775L19.8827 3.1227ZM1.97034 18.8939L19.358 4.14387L17.4174 1.85613L0.0296561 16.6061L1.97034 18.8939Z"
              fill="#E9E9E9"></path>
          </svg>
        </div>
        {
          upDate && roles && (
            <div class="hidden md:flex items-start gap-20">
              <div class="text-white md:text-2xl text-xl lg:text-3xl flex flex-col gap-4">
                <p class="uppercase font-bold">Date</p>
                <FormattedDate date={upDate} />
              </div>
              <div class="text-white md:text-2xl text-xl lg:text-3xl flex flex-col gap-4">
                <p class="uppercase font-bold"> Roles</p>
                <ul class="font-normal">
                  {roles.map((role) => (
                    <li> {role}</li>
                  ))}
                </ul>
              </div>
            </div>
          )
        }
      </div>
      <div class="w-full mb-28">
        {featuredImage && <img class="h-auto w-full object-cover" src={featuredImage.asset.url} alt={description} />}
      </div>
      <slot />
    </div>
  </section>
</Layout>
