---
import Layout from 'src/layouts/Layout.astro'
import { getProjectsQuery } from 'src/clients/sanity'

export async function getProjects() {
  return await getProjectsQuery(true)
}

const projects = await getProjects()
---

<Layout primaryStyles={false} title="Home Page" description="Lorem ipsum dolor sit amet">
  <section class="w-full bg-secondary">
    <div class="container mx-auto flex flex-col min-h-screen w-full px-5 md:px-10 lg:px-12 justify-center border-b border-black">
      <p class="text-lightGray font-bold uppercase md:text-7xl text-5xl lg:text-[115px] lg:leading-[115px] max-w-screen-lg">
        Turning ideas into digital dreams
      </p>
    </div>
    <div class="bg-secondary pb-28"></div>
  </section>
  <section class="w-full bg-primary">
    <div class="flex relative container mx-auto min-h-screen justify-center flex-col w-full bg-primary px-5 md:px-10 lg:px-12">
      <p class="text-gray max-w-screen-xl pr-20 md:text-6xl text-4xl lg:text-[80px] lg:leading-[100px]">
        Hi, I'am Alex, <span
          class="underline underline-offset-[6px] md:underline-offset-[12px] lg:underline-offset-[20px] decoration-secondary"
          >UI/UX Designer</span
        >. <br /> Let,s bring freshnes and fun to your project!
      </p>
      <div class="hidden absolute bottom-20 right-0 md:flex items-end flex-col w-full bg-primary px-5 md:px-10 lg:px-12">
        <div class="flex gap-4 items-center">
          <p class="uppercase font-normal text-white">Work</p>
          <svg xmlns="http://www.w3.org/2000/svg" width="23" height="39" viewBox="0 0 23 39" fill="none">
            <path
              d="M10.8811 38.0605C11.4669 38.6463 12.4167 38.6463 13.0025 38.0605L22.5484 28.5146C23.1342 27.9288 23.1342 26.9791 22.5484 26.3933C21.9626 25.8075 21.0129 25.8075 20.4271 26.3933L11.9418 34.8785L3.45655 26.3932C2.87076 25.8074 1.92102 25.8074 1.33523 26.3932C0.74944 26.979 0.749437 27.9287 1.33522 28.5145L10.8811 38.0605ZM10.4419 -0.000157927L10.4418 36.9998L13.4418 36.9998L13.4419 -0.000149618L10.4419 -0.000157927Z"
              fill="white"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>
</Layout>
