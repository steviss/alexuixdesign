---
import { FormattedDate } from 'src/components/react'
import FeaturedImage from 'src/components/sanity/FeaturedImage.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from 'src/config/consts'
import Layout from 'src/layouts/Layout.astro'
import { useGetProjectsQuery } from 'src/clients/sanity'

export async function getProjects() {
  return await useGetProjectsQuery(true)
}

const projects = await getProjects()
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="flex flex-col">
    <h1>Projects</h1>
  </section>
  <section class="xxl:grid-cols-4 grid grid-flow-row grid-cols-1 gap-4 py-24 md:grid-cols-2 md:gap-8 xl:grid-cols-3">
    {
      projects.map(({ featuredImage, title, pubDate, slug, estimatedReadingTime }) => (
        <div class="flex flex-col">
          <div class="relative h-[208px] overflow-hidden rounded-md">
            {featuredImage && <FeaturedImage class="max-h-52" width={360} height={240} asset={featuredImage} alt={title} />}
          </div>
          <div class="mt-6 flex flex-col text-primary md:flex-row">
            <div class="flex flex-col md:flex-row">
              <FormattedDate date={pubDate} />
              <span class="px-2">â€¢</span>
              <h4>Reading time: {estimatedReadingTime} min</h4>
            </div>
          </div>
          <h3 class="font-nunito py-8 text-3xl font-semibold text-white lg:text-4xl">
            <a href={slug}>{title}</a>
          </h3>
        </div>
      ))
    }
  </section>
</Layout>
