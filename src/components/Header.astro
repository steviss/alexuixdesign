---
import classNames from 'classnames'
import Logo from './Logo.astro'
import Navigation from './Navigation.astro'
import { MenuButton } from 'src/components/react'

export type Props = { styling?: boolean }

const { styling } = Astro.props
---

<header style=`background-color: ${styling ? "#C6FB3E": "#161616" };` id="top" class="w-full">
  <div
    class={classNames('container py-8 md:py-0 mx-auto flex justify-between items-center border-b  px-5 md:px-10 lg:px-12', {
      'border-black': styling,
      'border-white': !styling,
    })}
  >
    <Logo secondaryStyles={styling} />
    <MenuButton client:only />
    <ul class="hidden md:flex flex-row list-none">
      <Navigation />
    </ul>
  </div>
</header>
