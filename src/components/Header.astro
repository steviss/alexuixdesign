---
import classNames from 'classnames'
import Logo from './Logo.astro'
import Navigation from './Navigation.astro'
import { MenuButton } from 'src/components/react'

export type Props = { styling?: boolean }

const { styling } = Astro.props
---

<header class={classNames('w-full', `${styling ? 'bg-secondary' : 'bg-primary'}`)}>
  <div
    class={classNames(
      'container mx-auto flex items-center justify-between border-b px-5 py-8  md:px-10 md:py-0 lg:px-12',
      `${styling ? 'text-black' : 'text-white'} `,
    )}
  >
    <Logo secondaryStyles={styling} />
    <MenuButton client:only />
    <ul class="hidden list-none flex-row md:flex">
      <Navigation />
    </ul>
  </div>
</header>
