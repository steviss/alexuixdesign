---
import Link from './Link.astro'

import type { HTMLAttributes } from 'astro/types'
type Props = HTMLAttributes<'a'> & {
  label: string
}

const { href, label } = Astro.props
---

<li>
  <Link class="group" href={href}>
    <span class="ml-2 md:ml-0 font-bold uppercase text-2xl leading-7 tracking-wide">{label}</span>
  </Link>
</li>
